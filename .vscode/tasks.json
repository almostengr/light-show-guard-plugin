    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run tests",
            "type": "shell",
            "command": "vendor/bin/phpunit --colors=always",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run tests with debugger",
            "type": "shell",
            "command": "vendor/bin/phpunit --colors=always --debug",
        }
    ]
}